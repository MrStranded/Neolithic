
///////////////////////////////////////////////////////////////////////////// Fruit

Entity: entApple {
	name = "Apple";
	mesh = "apple_6x_loose.ply";

	attributes {
		attEdible, 1;
	}

	Script: tick() {
	    if (chance(0.001)) {
	        ..attNutrition--;
	    }

		if (.attNutrition <= 0) {
			destroy(self);
		}
	}

	Script: consume(actor) {
	    effect = addEffect(actor, effDigest);
        effect..attNutrition = .attNutrition;
        effect->contents = [cAppleSeed];

		destroy(self);
	}
}
