
///////////////////////////////////////////////////////////////////////////// Fruit

Entity: entFruit {
	name = "Apple";
	mesh = "apple_6x_loose.ply";

	attributes {
		attNutrition, 50;
		attEdible, 1;
	}

	Script: tick() {
	    ..attAge++;
		if (.attAge > 1440) {
			destroy(self);
		}
	}

	Script: consume(actor) {
        (addEffect(actor, effDigest))..attNutrition = .attNutrition;

		destroy(self);
	}
}
