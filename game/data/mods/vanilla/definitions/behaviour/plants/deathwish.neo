///////////////////////////////////////////////////////////////////////////// Drives

Drive: driDeathwish {
    solutions { proDie; }

    Script: condition { return .attDamage > 0; }

    Script: getWeight {
		overcrowding = max(0, getFullAtt(getTile(self), "attSize"));
        return(100 * .attDamage / .attMaxHealth + overcrowding);
    }
}

///////////////////////////////////////////////////////////////////////////// Processes

Process: proDie {
	Script: process {
		destroy(self);
	}
}
