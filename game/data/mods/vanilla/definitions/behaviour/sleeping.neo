
///////////////////////////////////////////////////////////////////////////// Effects

///////////////////////////////////////////////////////////////////////////// Drives

Drive: driSleep {
	Script: condition {
		require((.attFatigue > .attFatigueSensitivity) || (.attNutrition < 0));
		require(getLightLevel(self) <= .attLightSensitivity);
	}

	solutions {
		proSleep;
	}
}

///////////////////////////////////////////////////////////////////////////// Processes

Process: proSleep {
	Script: process {
        deleteEffects(self,effHunger);
	    addOccupation(self, .attSleepTime, "awake");
	    ..attSleeping = 1;
	}
}
