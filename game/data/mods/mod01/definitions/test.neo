Attribute attLife {
	name: "Life";
}

Attribute attSpeed {
	name: "Speed";
	mutationChance: 0.5;
}

Attribute attWeight {
	name: "Weight";
}

Entity entHuman {
	name: "Human";

	knowledge {
		proEat;
		proMove;
	}

	attributes {
		attLife, 7*20 - 80/2;
		attSpeed, random(1,2);
		attWeight, 70;
	}

	on start {
		sHumanBirthEvent;
	}
}

Script sHumanBirthEvent(human) {
	print ("a human has been born " + human.name);
	if (human.attLife > 1) {
		print ("and " + human.name + " is fast");
	} else {
		print ("but he/she is very slow");
	}
}

Entity entRock {
	name: "Rock";

	attributes { attWeight, 10; }
}
